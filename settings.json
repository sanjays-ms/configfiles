{
    // "update.mode": "none",
    "workbench.startupEditor": "none",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1,
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.fontFamily": "JetBrainsMono NFM SemiBold, Consolas , 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.selectionHighlight": true,
    "editor.smoothScrolling": true,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": "off",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.sideBar.location": "left",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "JetBrainsMono NFM SemiBold, Consolas , 'Courier New', monospace",
    "editor.lineNumbers": "relative",
    "editor.fontLigatures": true,
    "editor.stickyScroll.enabled": false,
    "github.copilot.nextEditSuggestions.enabled": true,
    "editor.scrollbar.verticalScrollbarSize": 8,
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.suggest.enabled": true,
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.editor.empty.hint": "hidden",
   	"vim.leader": "<space>",
	"vim.useSystemClipboard": true,
	"vim.hlsearch": true,
	"vim.highlightedyank.enable": true,
	"vim.highlightedyank.color": "rgb(130,133,232)",
	"vim.highlightedyank.duration": 200,
	"extensions.experimental.affinity": {
		"vscodevim.vim": 1,
	},

	"java.help.showReleaseNotes": false,
	"vim.handleKeys": {
	"<C-d>": true,
	"<C-s>": true,
	"<C-z>": true,
	"<C-p>": true,
	"<C-f>": true,
	"<C-c>": true,
	"<C-v>": true
	},
	"vim.visualModeKeyBindings": [
		{
			"before": ["n","n"],
			"after": ["<Esc>"]
		}
	],
	"vim.insertModeKeyBindings": [
		{
			"before": ["j","k"],
			"after": ["<Esc>"]
		}
	],
	"vim.normalModeKeyBindings": [
		{
			"before": ["<leader>","g","f"],
			"commands": ["workbench.action.quickOpen"],
			"silent": true
		},
        {
            "before": ["<leader>", "g", "b"],
            "commands": ["workbench.action.navigateBack"],
            "silent": true
        },
		{
			"before": ["<leader>","n","t"],
			"commands": ["workbench.view.explorer"],
			"silent": true
		},
		{
			"before": ["<leader>","f","d"],
			"commands": ["editor.action.formatDocument"],
			"silent": true
		},
		{
			"before": ["<leader>","c","t"],
			"commands": ["workbench.action.closeActiveEditor"],
			"silent": true
		},
		{
			"before": ["<leader>","s","v"],
			"commands": ["workbench.action.splitEditor"],
			"silent": true
		},
	  /*	not really working as going into visual mode and trying to comment just deletes the entire selection
		{
			"before": ["<leader>","b","c"],
			"commands": ["editor.action.blockComment"],
			"silent": true
		},
		{
			"before": ["<leader>","l","c"],
			"commands": ["editor.action.commentLine"],
			"silent": true
		},
		*/
		{
			"before": ["<leader>","s","c"],
			"commands": ["workbench.action.showCommands"],
			"silent": true
		},
		{
			"before": ["<leader>","f","s"],
			"commands": ["editor.action.formatSelection"],
			"silent": true
		},
		{
			"before": ["<leader>","f","c"],
			"commands": ["editor.fold"],
			"silent": true
		},
		{
			"before": ["<leader>","t","s"],
			"commands": ["workbench.action.toggleSidebarVisibility"],
			"silent": true
		}
	],
	"vim.mouseSelectionGoesIntoVisualMode": false,
	"files.exclude": {
		"**/.git": false
	}
}